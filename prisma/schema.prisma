generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String
  tags      String?  // 存储标签，用逗号分隔
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("posts")
}
